@using medalion.ViewModels
@inject Services.IDashboardStateService DashboardState

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
    <!-- Total Trades -->
    <div class="card bg-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-medium text-gray-500 uppercase">Total Trades</p>
                <p class="mt-2 text-3xl font-semibold text-gray-900">@stats.TotalTrades</p>
            </div>
            <div class="p-3 bg-blue-100 rounded-full">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Total P&L -->
    <div class="card bg-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-medium text-gray-500 uppercase">Total P&L</p>
                <p class="mt-2 text-3xl font-semibold @(stats.IsProfit ? "text-profit" : "text-loss")">
                    @(stats.IsProfit ? "+" : "")$@stats.TotalProfitLoss.ToString("N2")
                </p>
            </div>
            <div class="p-3 @(stats.IsProfit ? "bg-green-100" : "bg-red-100") rounded-full">
                @if (stats.IsProfit)
                {
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                }
                else
                {
                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
                    </svg>
                }
            </div>
        </div>
    </div>

    <!-- Win Rate -->
    <div class="card bg-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-medium text-gray-500 uppercase">Win Rate</p>
                <p class="mt-2 text-3xl font-semibold text-gray-900">@stats.WinRate.ToString("N1")%</p>
            </div>
            <div class="p-3 bg-purple-100 rounded-full">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Average Trade P&L -->
    <div class="card bg-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-medium text-gray-500 uppercase">Avg Trade P&L</p>
                <p class="mt-2 text-3xl font-semibold @(stats.AverageTradePnL >= 0 ? "text-profit" : "text-loss")">
                    @(stats.AverageTradePnL >= 0 ? "+" : "")$@stats.AverageTradePnL.ToString("N2")
                </p>
            </div>
            <div class="p-3 bg-orange-100 rounded-full">
                <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Last Trade Time -->
    <div class="card bg-white">
        <div class="flex items-center justify-between">
            <div class="min-w-0 flex-1">
                <p class="text-xs font-medium text-gray-500 uppercase">Last Trade</p>
                @if (stats.LastTradeTimestamp.HasValue)
                {
                    <p class="mt-2 text-sm font-semibold text-gray-900 truncate">
                        @stats.LastTradeTimestamp.Value.ToString("HH:mm:ss")
                    </p>
                    <p class="text-xs text-gray-500">
                        @GetRelativeTime(stats.LastTradeTimestamp.Value)
                    </p>
                }
                else
                {
                    <p class="mt-2 text-sm font-medium text-gray-500">No trades yet</p>
                }
            </div>
            <div class="p-3 bg-gray-100 rounded-full">
                <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- P&L Sparkline -->
@if (stats.PnLSparklineData.Any())
{
    <div class="card mt-4">
        <h4 class="text-sm font-medium text-gray-700 mb-3">P&L Over Last 24 Hours</h4>
        <div class="h-20">
            <svg viewBox="0 0 @(stats.PnLSparklineData.Count * 10) 100" class="w-full h-full">
                @{
                    var maxValue = stats.PnLSparklineData.Any() ? Math.Max(Math.Abs(stats.PnLSparklineData.Max()), Math.Abs(stats.PnLSparklineData.Min())) : 1;
                    if (maxValue == 0) maxValue = 1;
                }

                <!-- Zero line -->
                <line x1="0" y1="50" x2="@(stats.PnLSparklineData.Count * 10)" y2="50"
                      stroke="#d1d5db" stroke-width="0.5" stroke-dasharray="2,2"/>

                <!-- Sparkline path -->
                @{
                    var pathData = "M ";
                    for (int i = 0; i < stats.PnLSparklineData.Count; i++)
                    {
                        var x = i * 10 + 5;
                        var normalizedValue = (double)(stats.PnLSparklineData[i] / (decimal)maxValue);
                        var y = 50 - (normalizedValue * 40); // Scale to fit in viewBox
                        pathData += $"{x},{y} ";
                    }
                }
                <polyline points="@pathData.Trim()"
                         fill="none"
                         stroke="@(stats.IsProfit ? "#16a34a" : "#dc2626")"
                         stroke-width="2"/>

                <!-- Data points -->
                @for (int i = 0; i < stats.PnLSparklineData.Count; i++)
                {
                    var x = i * 10 + 5;
                    var normalizedValue = (double)(stats.PnLSparklineData[i] / (decimal)maxValue);
                    var y = 50 - (normalizedValue * 40);
                    var isProfit = stats.PnLSparklineData[i] >= 0;

                    <circle cx="@x" cy="@y" r="1.5"
                           fill="@(isProfit ? "#16a34a" : "#dc2626")"/>
                }
            </svg>
        </div>
        <div class="flex justify-between mt-2 text-xs text-gray-500">
            <span>24h ago</span>
            <span>Now</span>
        </div>
    </div>
}

@code {
    private DailyStatsViewModel stats = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadStats();
        DashboardState.OnStateChanged += OnStateChanged;
    }

    private async void OnStateChanged()
    {
        await LoadStats();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadStats()
    {
        stats = await DashboardState.GetDailyStatsAsync();
    }

    private string GetRelativeTime(DateTime timestamp)
    {
        var diff = DateTime.UtcNow - timestamp;
        if (diff.TotalMinutes < 1) return "Just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        return $"{(int)diff.TotalDays}d ago";
    }

    public void Dispose()
    {
        DashboardState.OnStateChanged -= OnStateChanged;
    }
}
